# Application Configuration
NODE_ENV=development
PORT=4000
API_VERSION=v1

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_PORT_HOST=4444
DB_NAME=whatsapp_api
DB_USER=postgres
DB_PASSWORD=secure_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10

# Security
JWT_SECRET=super_secret_key_at_least_32_chars
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# WhatsApp API Configuration (Meta)
WHATSAPP_API_KEY=your_meta_api_key
WHATSAPP_WEBHOOK_SECRET=your_meta_webhook_secret

# Simulation Configuration (WhatsApp Simulator)
CLIENT_WEBHOOK_URL=http://localhost:3000/api/v1/webhooks
APP_SECRET=simulator_secret_key
