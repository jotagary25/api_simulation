# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=whatsapp_api
DB_USER=postgres
DB_PASSWORD=postgres_password_change_in_production
DB_POOL_MIN=2
DB_POOL_MAX=10

# Security
JWT_SECRET=change_this_secret_in_production_use_strong_random_string
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# WhatsApp API Configuration (add your specific configs)
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret

# Simulation Configuration
CLIENT_WEBHOOK_URL=http://host.docker.internal:3000/api/v1/webhooks
APP_SECRET=simulator_secret
